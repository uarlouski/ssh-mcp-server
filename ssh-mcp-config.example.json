{
  "allowedCommands": [
    "ls",
    "cat",
    "grep",
    "ps",
    "docker",
    "kubectl",
    "git",
    "systemctl",
    "df",
    "curl"
  ],
  "servers": {
    "production-api": {
      "host": "api-prod-01.example.com",
      "username": "deploy",
      "privateKeyPath": "~/.ssh/production_deploy_key"
    },
    "production-db": {
      "host": "db-prod-master.example.com",
      "port": 2222,
      "username": "dbadmin",
      "privateKeyPath": "~/.ssh/db_admin_key"
    },
    "kubernetes-bastion": {
      "host": "k8s-bastion.example.com",
      "username": "k8s-operator",
      "privateKeyPath": "~/.ssh/kubernetes_operator_key"
    }
  },
  "portForwardingServices": {
    "pg-prod-database": {
      "connectionName": "production-db",
      "remoteHost": "db-internal-01.example.com",
      "remotePort": 5432,
      "description": "PostgreSQL database access"
    }
  },
  "commandTemplates": {
    "k8s-pod-logs": {
      "command": "kubectl logs -n {{namespace}} {{pod}} --tail={{lines:100}}",
      "description": "Fetch Kubernetes pod logs with configurable tail size"
    },
    "docker-stats": {
      "command": "docker stats {{container:--all}} --no-stream --format 'table {{.Name}}\\t{{.CPUPerc}}\\t{{.MemUsage}}'",
      "description": "Get real-time Docker container statistics ({{.Name}} is Docker syntax, not a template variable)"
    },
    "disk-usage": {
      "command": "df -h {{path:/}}",
      "description": "Check disk usage for a specific path"
    },
    "service-status": {
      "command": "systemctl status {{service}}",
      "description": "Check systemd service status"
    }
  },
  "timeout": 30000,
  "maxConnections": 10
}